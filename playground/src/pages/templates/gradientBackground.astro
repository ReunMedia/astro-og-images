---
import { ogImage } from "@reunmedia/astro-og-images";
import Template from "../../layouts/Template.astro";
import gradientBackground from "../../ogImageTemplates/gradientBackground";
import sourceCode from "../../ogImageTemplates/gradientBackground?raw";

const image = await ogImage(
  gradientBackground({
    title: "Gradient Background",
    description: "Pretty colors!",
  }),
);
---

<Template
  ogImage={image}
  templateName={"Gradient Background"}
  templateCode={sourceCode}
/>
